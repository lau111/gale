 .spriteBox {
 }

 .spriteBox a {
   display:block;   /* ブロック要素にします */
   overflow:hidden; /* はみ出ないようにします */
   width:50px;
   height:50px;    /* 表示領域を指定するためheigthも指定 */
   margin:2 auto;
   background:url(btn.png) 0 0 no-repeat;
   /* 追加で記入　テキストを見えなくします。 */
   text-indent:100%;
   white-space:nowrap;
 }
 .spriteBox a:hover { /* hover時のイベント */
   background-position: 50 0px; /* 横は0　縦に-100pxずらす 起点は左上なので注意*/
 }

